startup_message off
vbell           off
msgminwait      0
autodetach      on
defscrollback   10000

shelltitle "% |zsh"
hardstatus on
hardstatus alwayslastline "%`%-w%{=b bw}%n %t%{-}%+w"
bind s

term xterm-256color

# 強制リサイズ回避
termcapinfo xterm-256color hs@:is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l

# 画面が残らないように
altscreen on

defbce on
