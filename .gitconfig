[color]
    ui = true
[user]
    name = Songmu
    email = y.songmu@gmail.com
[core]
    quotepath = false
    excludesfile = ~/.gitignore_global
    precomposeunicode = true
[alias]
    co = checkout
    ci = commit
    st = status -sb
    br = branch
    cp = cherry-pick
    l  = log --date=local -10
    lo = log --date=local
    subup = submodule foreach 'git pull origin master'
    wd = diff --word-diff
    lg = log --graph --pretty=oneline --decorate --date=short --abbrev-commit --branches
    dc = diff --cached
    f  = flow
    fh = flow hotfix
    ff = flow feature
    fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*
    ag = "!git ls-files | xargs ag --pager=\"less -F -R\" --nogroup --color-match=0\\;31 --color-path=0\\;0 --no-numbers"
[include]
    path = ~/.gitconfig.local
[push]
    default = simple
[diff]
    algorithm = histogram
[diff "lockb"]
    textconv = bun
    binary = true
[pager]
    log  = diff-highlight | less -r
    show = diff-highlight | less -r
    diff = diff-highlight | less -r
[url "git@github.com:"]
    pushinsteadof = "git://github.com/"
    pushinsteadof = "https://github.com/"
[ghq]
    root = ~/dev/src
    completeUser = false
[merge]
    ff = false
[credential]
    helper = cache --timeout=3600
[pull]
    rebase = yes
[submodule]
    fetchJobs = 4
[init]
    defaultBranch = main
[http]
    cookiefile = /Users/Songmu/.gitcookies
